.row
  .col-sm-12
    %h1.page-header= t('.titulo')

= form_for @city , html: { multipart: true , class: 'form-horizontal' } do |f|
  .h1= t('.title.download',:city => @city.name)
  .row
    .panel.panel-default
      .panel-heading
        =t('.subtitle.download')
      .panel-body
        %table{ class:'table table-striped table-bordered table-hover' }
          %tbody
            %tr
              = link_to t('.download'),"/NombreDelMunicipio.zip" , :class => 'btn btn-sm btn-success outlineverde'

  .h2= t('.title.upload')
  .row
    .panel.panel-default
      .panel-heading
        =t('.subtitle.upload')
      .panel-body
        %table{ class:'table table-striped table-bordered table-hover' }
          %tbody
            %tr
              %td= t('.aviso')
              %td
                %span= link_to(@city.privacy_file_identifier, @city.privacy_file_url, target: "_blank") if @city.privacy_file_url
                = f.file_field :privacy_file
            %tr
              %td= t('.construction')
              %td
                %span= link_to(@city.construction_file_identifier, @city.construction_file_url, target: "_blank") if @city.construction_file_url
                = f.file_field :construction_file
            %tr
              %td= t('.land')
              %td
                %span= link_to(@city.land_file_identifier, @city.land_file_url, target: "_blank") if @city.land_file_url
                = f.file_field :land_file
            %tr
              %td= t('.business')
              %td
                %span= link_to(@city.business_file_identifier, @city.business_file_url, target: "_blank") if @city.business_file_url
                = f.file_field :business_file
            %tr
              %td= t('.business')
              %td
                %span= link_to(@city.business_file_identifier, @city.business_file_url, target: "_blank") if @city.business_file_url
                = f.file_field :business_file
            %tr
              %td= t('.business')
              %td
                %span= link_to(@city.business_file_identifier, @city.business_file_url, target: "_blank") if @city.business_file_url
                = f.file_field :business_file
            %tr
              %td= t('.business')
              %td
                %span= link_to(@city.business_file_identifier, @city.business_file_url, target: "_blank") if @city.business_file_url
                = f.file_field :business_file
      .panel-footer
        &nbsp;
        .pull-right
          = f.submit t('.save'), :class => 'btn btn-sm btn-success outlineverde'