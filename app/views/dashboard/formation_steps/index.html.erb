<div class="container top-cruds">
  <div class="row">
    <div class="col-md-8">
      <h2> <%= t('titles.formation_steps') %></h2>
    </div>
    <div class="col-md-4 text-right">
      Descargar:
      <%= link_to "CSV", dashboard_formation_steps_path( format: "csv") , :class => 'btn btn-success btn-lg outlineverde' %>
    </div>
  </div>
  <hr>
  <div class="row text-right">
    <%= link_to t('.new_formation_step'), new_dashboard_formation_step_path, :class => 'btn btn-success btn-lg outlineverde texto-padding-right'  %>
  </div>
  <table class="table">
   <thead>
     <th>#</th>
     <th><%= t('.name') %></th>
     <th><%= t('.tipo') %></th>
     <th><%= t('.municipio') %></th>
   </thead>
   <tbody>
     <% @formation_steps.each_with_index do |formation, idx| %>
     <%= content_tag :tr do %>
     <%= content_tag :td, idx + 1 %>
     <%= content_tag :td, truncate(formation.name, :length => 70) %>
     <%= content_tag :td, type(formation.type_formation_step) %>
     <%= content_tag :td, formation.city.name %>
     <%= content_tag :td do %>
     <div class="text-right">
      <%= link_to t('form.actions.edit'), edit_dashboard_formation_step_path(formation), :class => 'btn btn-success btn-lg outlineverde'%> | 
      <%= link_to t('form.actions.destroy'), dashboard_formation_step_path(formation), method: :delete, data: { confirm: t('form.confirmations.delete_formation_step') } , :class => 'btn btn-success btn-lg outlineverde' %>
     </div>
     <% end %>
     <% end %>
     <% end %>
   </tbody>
 </table>
</div>