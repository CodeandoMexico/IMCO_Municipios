  <%= form_for [:dashboard, @formation_step], html: { class: 'form-container' } do |f| %>
  <%= render "shared/show_flash" %>

  <div class="form-group">
    <div class="col-md-8 col-md-offset-2">
      <%= t('.nombre') %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-8 col-md-offset-2 texto-margin-top">
      <%= t('.description') %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-8 col-md-offset-2 texto-margin-top">
      <%= t('.path') %>
      <%= f.text_field :path, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-8 col-md-offset-2 texto-margin-top">
      <%= t('.type_formation_step') %>
      <%= f.select(:type_formation_step, type_of_people_formation_step, {:include_blank => false}, :class => 'form-control') %>
    </div>
  </div>

  <div class="col-md-6 col-md-offset-3 text-center texto-padding-top">
    <%= f.submit t('.create_formation_steps'), :class => 'btn btn-success btn-lg outlineverde' %>
  </div>
  <% end %>