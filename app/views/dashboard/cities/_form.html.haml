= form_for [:dashboard, @city], html: { class: 'form-horizontal' } do |f|
  .row
    .panel.panel-default
      .panel-heading
        &nbsp;
        .pull-right
          = f.submit t('.create_cities'), :class => 'btn btn-sm btn-success outlineverde'
      .panel-body
        %table{ class:'table table-striped table-bordered table-hover' }
          %tbody
            %tr
              %td= t('.name')
              %td= f.text_field :name, class: 'form-control'
            %tr
              %td= t('.latitude')
              %td= f.text_field :latitude, class: 'form-control'
            %tr
              %td= t('.longitude')
              %td= f.text_field :longitude, class: 'form-control'
            %tr
              %td= t('.activated')
              %td= f.check_box(:activated,:data => { :size=>'small', 'on-color'=>'success', 'on-text'=>'SÃ­', 'off-text'=>'No' })

