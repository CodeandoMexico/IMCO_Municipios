%h2= t('titles.procedures')
.row.text-right
  = link_to t('.new_procedures'), new_dashboard_procedure_path, :class => 'btn btn-success btn-xs outlineverde'

- if @procedures.any?
  %table{ class:'table table-striped table-bordered table-hover' }
    %thead
      %th #
      %th= t('.name')
      %th= t('.dependencia')
      %th= t('.actions')
    %tbody
      %tr
        - @procedures.each_with_index do |procedure, idx|
          %td= idx + 1
          %td= truncate(procedure.name, length: 70)
          %td= procedure.dependency.name
          %td
            = link_to t('form.actions.edit'), edit_dashboard_procedure_path(procedure), class: 'btn btn-success btn-xs outlineverde'
            = link_to t('form.actions.destroy'), dashboard_procedure_path(procedure), method: :delete, data: { confirm: t('form.confirmations.delete_procedure') }, class: 'btn btn-success btn-xs outlineverde'
  %p
    Descargar:
    = link_to "CSV", dashboard_procedures_path( format: "csv") , class: 'btn btn-success btn-xs outlineverde'
- else
  = render 'shared/empty_resource', message: t('.no_procedures_available')
