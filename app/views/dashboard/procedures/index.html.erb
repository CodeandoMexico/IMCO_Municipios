<div id="main" class="container clear-top">
  <div class="row">
    <div class="span12">
      <section id="services">
        <div class="center-block-margin">
          <div class="container">
            <h2> <%= t('titles.procedures') %></h2>
            <div class="row text-right">
              <%= link_to t('.new_procedures'), new_dashboard_procedure_path, :class => 'btn btn-success btn-xs outlineverde' %>
            </div>
            <table class="table">
             <thead>
               <th>#</th>
               <th><%= t('.name') %></th>
               <th><%= t('.dependencia') %></th>
               <th><%= t('.actions') %></th>
             </thead>
             <tbody>
               <% @procedures.each_with_index do |procedure, idx| %>
               <%= content_tag :tr do %>
               <%= content_tag :td, idx + 1 %>
               <%= content_tag :td, truncate(procedure.name, :length => 70)%>
               <%= content_tag :td, Dependency.find(procedure.dependency_id).name%>
               <%= content_tag :td do %>
               <%= link_to t('form.actions.edit'), edit_dashboard_procedure_path(procedure) , :class => 'btn btn-success btn-xs outlineverde'%> 
               <%= link_to t('form.actions.destroy'), dashboard_procedure_path(procedure), method: :delete, data: { confirm: t('form.confirmations.delete_procedure') }, :class => 'btn btn-success btn-xs outlineverde' %>
               <% end %>
               <% end %>
               <% end %>
             </tbody>
           </table>

           <p>
            Descargar:
            <%= link_to "CSV", dashboard_procedures_path( format: "csv") , :class => 'btn btn-success btn-xs outlineverde'%>
            <%#= link_to "XLS", dashboard_procedures_path( format: "xls") %>
          </p>
        </div>
      </div>
    </section>
  </div>
</div>
</div>
</div>

