<div id="form-container">
  <%= form_for [:dashboard, @procedure], html: { class: 'form-horizontal' } do |f| %>
    <% if @procedure.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@requirements.errors.count, "error") %> prohibited this lines from being saved:</h2>

        <ul>
        <% @procedure.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :nombe, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :nombre, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :duracion, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :duracion, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :costo, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :costo, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :vigencia, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :vigencia, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :costo, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :costo, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :tipo, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :tipo, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :requirements, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= collection_select(:requirements, :requirement_id, Requirement.all, :id, :nombre, {:prompt => true}, class: 'form-control') %>
      </div>
    </div>

    <div class="form-group">
      <%#= f.label :dependencia, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%#= collection_select(:inspection, :dependency_id, Dependency.all, :id, :nombre, {:prompt => false}, class: 'form-control') %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit t('.create_procedures'), class: 'btn btn-default pull-right' %>
    </div>
  <% end %>
</div>