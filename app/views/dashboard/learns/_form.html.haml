= form_for [:dashboard, @learn], html: { class: 'form-horizontal' } do |f|
  .row
    .panel.panel-default
      .panel-heading
        &nbsp;
        .pull-right
          = f.submit t('.create_learn'), :class => 'btn btn-sm btn-success outlineverde'
      .panel-body
        %table{ class:'table table-striped table-bordered table-hover' }
          %tbody
            %tr
              %td= t('.name')
              %td= f.text_field :name, class: 'form-control'
            %tr
              %td= t('.description')
              %td= f.text_field :description, class: 'form-control'
            %tr
              %td= t('.video_id')
              %td= f.text_field :video_id, class: 'form-control'
            %tr
              %td= t('.for_admin')
              %td= f.check_box(:for_admin,:data => { :size=>'small', 'on-color'=>'success', 'on-text'=>'SÃ­', 'off-text'=>'No' })

