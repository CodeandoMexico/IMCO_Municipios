.row
  .col-sm-12
    %h1.page-header= t('titles.learns')
.row
  .panel.panel-default
    .panel-heading
      &nbsp;
      .pull-right
        = link_to t('.new_learn'), new_dashboard_learn_path, class: 'btn btn-sm btn-success'
    .panel-body
      - if @learns.any?
        %table{ class:'table table-striped table-bordered table-hover' }
          %thead
            %th #
            %th= t('.name')
            %th= t('.descripcion')
            %th= t('.video_id')
            %th= t('.category')
            %th= t('.actions')
          %tbody
            - @learns.each_with_index do |learn, idx|
              %tr
                %td= idx + 1
                %td= truncate(learn.name, length: 70)
                %td= truncate(learn.description, length: 70)
                %td= truncate(learn.video_id, length: 70)
                %td= truncate(learn.category, length: 70)
                %td
                  = link_to edit_dashboard_learn_path(learn) do
                    %i.fa.fa-pencil
                  = link_to dashboard_learn_path(learn), method: :delete, data: { confirm: t('form.confirmations.delete_line') } do
                    %i.fa.fa-trash