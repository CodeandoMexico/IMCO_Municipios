<div id="form-container">
  <%= form_for [:dashboard, @inspection], html: { class: 'form-horizontal' } do |f| %>
    <% if @inspection.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@inspection.errors.count, "error") %> prohibited this inspection from being saved:</h2>

        <ul>
        <% @inspection.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :nombre, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :nombre, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :materia, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :materia, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :duracion, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :duracion, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :norma, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :norma, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :antes, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :antes, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :durante, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :durante, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :despues, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :despues, class: 'form-control' %>
      </div>
    </div>

      <div class="form-group">
      <%= f.label :sancion, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :sancion, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :dependencia, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= collection_select(:inspection, :dependency_id, @dependency, :id, :nombre, {:prompt => false}, class: 'form-control') %>
      </div>
    </div>

    <div class="form-group">
      <%=f.label :requirement_ids, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.select :requirement_ids, @requirements.map { |u| [u.nombre, u.id] },{ include_blank: true },{ class: 'chosen-select', :multiple=>true, :data => { :placeholder => ' ' }}%>
      </div>
    </div>

     <div class="form-group">
      <%=f.label :line_ids, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.select :line_ids, @lines.map { |u| [u.nombre, u.id] },{ include_blank: true },{ class: 'chosen-select', :multiple=>true, :data => { :placeholder => ' ' }}%>
      </div>
    </div>

    <div class="actions">
      <%= f.submit t('.create_inspection'), class: 'btn btn-default pull-right' %>
    </div>
  <% end %>
</div>
