<div class="container top-cruds">
  <div class="row">
    <div class="col-md-8">
      <h2> <%= t('titles.inspectors') %></h2>
    </div>
    <div class="col-md-4 text-right">
      Descargar:
      <%= link_to "CSV", dashboard_inspectors_path( format: "csv"), :class => 'btn btn-success btn-lg outlineverde' %>
    </div>
  </div>
  <hr>
  <div class="row text-right">
    <%= link_to t('.new_inspector'), new_dashboard_inspector_path, :class => 'btn btn-success btn-lg outlineverde texto-padding-right' %>
  </div>
  <table class="table">
    <thead>
      <th>#</th>
      <th><%= t('.name') %></th>
      <th><%= t('.dependency') %></th>
    </thead>
    <tbody>
      <% @inspectors.each_with_index do |inspector, idx| %>
      <%= content_tag :tr do %>
      <%= content_tag :td, idx + 1 %>
      <%= content_tag :td, truncate(inspector.name, :length => 70) %>
      <%= content_tag :td, inspector.dependency.name %>
      <%= content_tag :td do %>
      <div class="text-right">
        <%= link_to t('form.actions.edit'), edit_dashboard_inspector_path(inspector), :class => 'btn btn-success btn-lg outlineverde' %> |
        <%= link_to t('form.actions.destroy'), dashboard_inspector_path(inspector), method: :delete, data: { confirm: t('form.confirmations.delete_inspector') } , :class => 'btn btn-success btn-lg outlineverde'%>
      </div>
      <% end %>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>