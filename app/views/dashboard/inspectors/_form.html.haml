#form-container
  = form_for [:dashboard, @inspector], html: { class: 'form-horizontal' } do |f|
    = render 'shared/show_flash'
    .form-group
      = f.label t('.name'), class: 'col-sm-2 control-label'
      .col-sm-10
        = f.text_field :name, class: 'form-control'

    .form-group
      = f.label t('.validity'), class: 'col-sm-2 control-label'
      .col-sm-10
        = f.text_field :validity, class: 'form-control'

    .form-group
      = f.label t('.matter'), class: 'col-sm-2 control-label'
      .col-sm-10
        = f.text_field :matter, class: 'form-control'

    .form-group
      = f.label t('.supervisor'), class: 'col-sm-2 control-label'
      .col-sm-10
        = f.text_field :supervisor, class: 'form-control'

    .form-group
      = f.label t('.contact'), class: 'col-sm-2 control-label'
      .col-sm-10
        = f.text_field :contact, class: 'form-control'

    .form-group
      = f.label t('.photo'), class: 'col-sm-2 control-label'
      .col-sm-10
        %span= link_to(@inspector.photo_identifier, @inspector.photo_url, target: "_blank") if @inspector.photo_url
        = f.file_field :photo

    .form-group
      = f.label t('.dependency'), class: 'col-sm-2 control-label'
      .col-sm-10
        = collection_select(:inspector, :dependency_id, Dependency.all, :id, :name, {:prompt => false}, class: 'form-control')

    .actions.pull-right
      = f.submit t('.create_inspector'), :class => 'btn btn-sm btn-success outlineverde'
