 <%= form_for [:dashboard, @inspector], html: { class: 'form-container', multipart: true } do |f| %>
    <%= render "shared/show_flash" %>

    <div class="form-group">
    <div class="col-md-8 col-md-offset-2">
      <%= t('.nombre') %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
    <div class="col-md-8 col-md-offset-2 texto-margin-top">
      <%= t('.validity') %>
        <%= f.text_field :validity, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
    <div class="col-md-8 col-md-offset-2 texto-margin-top">
      <%= t('.matter') %>
        <%= f.text_field :matter, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
    <div class="col-md-8 col-md-offset-2 texto-margin-top">
      <%= t('.supervisor') %>
        <%= f.text_field :supervisor, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
    <div class="col-md-8 col-md-offset-2 texto-margin-top">
      <%= t('.contact') %>
        <%= f.text_field :contact, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
    <div class="col-md-8 col-md-offset-2 texto-margin-top">
      <%= t('.photo') %>
        <span><%= link_to(@inspector.photo_identifier, @inspector.photo_url, target: "_blank") if @inspector.photo_url %></span>
        <%= f.file_field :photo, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
    <div class="col-md-8 col-md-offset-2 texto-margin-top">
      <%= t('.dependency_id') %>
      <%= f.select :dependency_id, @dependency.map { |u| [u.name, u.id] },{ include_blank: true }, { class: 'chosen-select' }%>
      </div>
    </div>

    <div class="col-md-6 col-md-offset-3 text-center texto-padding-top">
      <%= f.submit t('.create_inspector'), :class => 'btn btn-success btn-lg outlineverde' %>
    </div>
  <% end %>