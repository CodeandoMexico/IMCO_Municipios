<div id="form-container">
  <%= form_for [:dashboard, @requirement], html: { class: 'form-horizontal' } do |f| %>
    <% if @requirement.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@requirements.errors.count, "error") %> prohibited this lines from being saved:</h2>

        <ul>
        <% @requirement.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :nombe, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :nombre, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :descripcion, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :descripcion, class: 'form-control' %>
      </div>
    </div>

     <div class="form-group">
      <%= f.label :path, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :path, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%#= f.label :dependencia, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%#= collection_select(:inspection, :dependency_id, Dependency.all, :id, :nombre, {:prompt => false}, class: 'form-control') %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit t('.create_requirements'), class: 'btn btn-default pull-right' %>
    </div>
  <% end %>
</div>