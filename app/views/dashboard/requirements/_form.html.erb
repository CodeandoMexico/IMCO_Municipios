  <%= form_for [:dashboard, @requirement], html: { class: 'form-container' } do |f| %>
   <%= render "shared/show_flash" %>
    <div class="form-group">
    <div class="col-md-8 col-md-offset-2">
      <%= t('.nombre') %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    </div>

    <div class="form-group">
    <div class="col-md-8 col-md-offset-2 texto-margin-top">
      <%= t('.description') %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
    </div>

     <div class="form-group">
    <div class="col-md-8 col-md-offset-2 texto-margin-top">
      <%= t('.path') %>
      <%= f.text_field :path, class: 'form-control' %>
    </div>
    </div>
    <div class="col-md-6 col-md-offset-3 text-center texto-padding-top">
      <%= f.submit t('.create_requirements'), :class => 'btn btn-success btn-lg outlineverde' %>
    </div>
  <% end %>