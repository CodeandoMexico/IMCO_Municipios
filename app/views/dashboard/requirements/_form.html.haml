#form-container
  = form_for [:dashboard, @requirement], html: { class: 'form-horizontal' } do |f|
    = render 'shared/show_flash'
    .form-group
      = f.label :name, class: 'col-sm-2 control-label'
      .col-sm-10
        = f.text_field :name, class: 'form-control'

    .form-group
      = f.label :description, class: 'col-sm-2 control-label'
      .col-sm-10
        = f.text_field :description, class: 'form-control'

    .form-group
      = f.label :path, class: 'col-sm-2 control-label'
      .col-sm-10
        = f.text_field :path, class: 'form-control'

    .actions.pull-right
      = f.submit t('.create_requirements'), class: 'btn btn-sm btn-success outlineverde'
