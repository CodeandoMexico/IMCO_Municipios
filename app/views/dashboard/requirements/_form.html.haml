#form-container
  = form_for [:dashboard, @requirement], html: { class: 'form-horizontal' } do |f|
    - if @requirement.errors.any?
      #error_explanation
        %h2
          = pluralize(@requirement.errors.count, "error")
          prohibited this lines from being saved:

        %ul
          - @requirement.errors.full_messages.each do |message|
            %li= message


    .form-group
      = f.label :name, class: 'col-sm-2 control-label'
      .col-sm-10
        = f.text_field :name, class: 'form-control'

    .form-group
      = f.label :description, class: 'col-sm-2 control-label'
      .col-sm-10
        = f.text_field :description, class: 'form-control'

    .form-group
      = f.label :path, class: 'col-sm-2 control-label'
      .col-sm-10
        = f.text_field :path, class: 'form-control'

    .actions.pull-right
      = f.submit t('.create_requirements'), class: 'btn btn-sm btn-success outlineverde'
