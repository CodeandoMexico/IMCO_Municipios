<div id="form-container">
  <%= form_for [:dashboard, @dependency], html: { class: 'form-horizontal' } do |f| %>
  <% if @dependency.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@dependencies.errors.count, "error") %> prohibited this lines from being saved:</h2>

    <ul>
      <% @dependency.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <%#= f.label :dependencia, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%#= collection_select(:inspection, :dependency_id, Dependency.all, :id, :nombre, {:prompt => false}, class: 'form-control') %>
    </div>
  </div>

  <div class="actions bg-primary-nergro">
    <%= f.submit t('.create_dependency'), :class => 'btn btn-success btn-sm outlineverde' %>
  </div>
  <% end %>
</div>
