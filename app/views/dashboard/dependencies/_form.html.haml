#form-container
  = form_for [:dashboard, @dependency], html: { class: 'form-horizontal' } do |f|
    - if @dependency.errors.any?
      #error_explanation
        %h2
          = pluralize(@dependency.errors.count, "error")
          prohibited this lines from being saved:

        %ul
          - @dependency.errors.full_messages.each do |message|
            %li= message

    .form-group
      = f.label t('.name'), class: 'col-sm-2 control-label'
      .col-sm-10
        = f.text_field :name, class: 'form-control'

    .actions.bg-primary-negro.pull-right
      = f.submit t('.create_dependency'), :class => 'btn btn-sm btn-success outlineverde'
