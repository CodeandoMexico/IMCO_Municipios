<h2> <%= t('titles.dependencies') %></h2>
<%= link_to t('.new_dependencies'), new_dashboard_dependency_path, class: 'btn btn-default pull-right' %>

<table class="table">
   <thead>
     <th>#</th>
     <th><%= t('.name') %></th>
     <th><%= t('.actions') %></th>
   </thead>
   <tbody>
     <% @dependencies.each_with_index do |dependency, idx| %>
       <%= content_tag :tr do %>
            <%= content_tag :td, idx + 1 %>
            <%= content_tag :td, truncate(dependency.nombre, :length => 70)%>
            <%= content_tag :td, dependency.municipio.nombre  %>
            <%= content_tag :td do %>
              <%= link_to t('form.actions.edit'), edit_dashboard_dependency_path(dependency) %> |
              <%= link_to t('form.actions.destroy'), dashboard_dependency_path(dependency), method: :delete, data: { confirm: t('form.confirmations.delete_line') } %>
            <% end %>
       <% end %>
     <% end %>
   </tbody>
</table>
