%h2= t('titles.dependencies')
.row.text-right
  = link_to t('.new_dependency'), new_dashboard_dependency_path, :class => 'btn btn-success btn-xs outlineverde'

- if @dependencies.any?
  %table{ class:'table table-striped table-bordered table-hover' }
    %thead
      %th #
      %th= t('.name')
      %th= t('.actions')
    %tbody
      %tr
        - @dependencies.each_with_index do |dependency, idx|
          %td= idx + 1
          %td= truncate(dependency.name, length: 70)
          %td
            = link_to t('form.actions.edit'), edit_dashboard_dependency_path(dependency), class: 'btn btn-success btn-xs outlineverde'
            = link_to t('form.actions.destroy'), dashboard_dependency_path(dependency), method: :delete, data: { confirm: t('form.confirmations.delete_line')  }, class: 'btn btn-success btn-xs outlineverde'
  %p
    Descargar:
    = link_to "CSV", dashboard_dependencies_path( format: "csv") , :class => 'btn btn-success btn-xs outlineverde'
- else
  = render 'shared/empty_resource', message: t('.no_dependencies_available')
