<div id="form-container">
  <%= form_for  @user, html: { class: 'form-horizontal' } do |f| %>
<%= render "shared/show_flash" %>
  <div class="form-group">
    <%= f.label t('dashboard.contacts.edit.correo'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>

   <div class="form-group">
    <%= f.label t('dashboard.contacts.edit.password'), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>

  <div class="actions bg-primary-negro">
    <%= f.submit t('dashboard.contacts.edit.ok'), :class => 'btn btn-success btn-sm outlineverde' %>
  </div>
  <% end %>
</div>
