<br/>
  <div style="border: 1px solid white;background-color:white;">
    <table class="table bg-primary-negro">
      <tbody>
        <tr>
          <td class="texto-verde-wrap"><%= t('.subject') %></td>
          <td><p><%= @inspection.matter %></p></td>
        </tr>
        <tr>
          <td class="texto-verde-wrap"><%= t('.period') %></td>
          <td><p><%= @inspection.duration %></p></td>
        </tr>
        <tr>
          <td class="texto-verde-wrap"><%= t('.norm') %></td>
          <td><p><%= @inspection.rule %></p></td>
        </tr>
        <tr>
          <td class="texto-verde-wrap"><%= t('.before_tips') %></td>
          <td><p><%= @inspection.before %></p></td>
        </tr>
        <tr>
          <td class="texto-verde-wrap"><%= t('.during_tips') %></td>
          <td><p><%= @inspection.during %></p></td>
        </tr>
        <tr>
          <td class="texto-verde-wrap"><%= t('.after_tips') %></td>
          <td><p><p><%= @inspection.after %></p></td>
        </tr>
        <tr>
          <td class="texto-verde-wrap"><%= t('.sanctions_tips') %></td>
          <td><p><%= @inspection.sanction %></p></td>
        </tr>
      </tbody>
    </table>
  </div>
  <!-- <hr class="small"> -->
  <p class="text-left"><%=t('.inspection_debes')%></p>
  <div class="deck">
    <div class="row text-center ">
      <div class="col-lg-12">
        <%= render "requirement" %>
      </div>
    </div>
  </div>
<%= link_to t('buttons.downloader'), download_csv_inspections_show_city_inspections_path(@city,:id_inspection => @id_inspection,:lines => @lines, format: :csv),:class => "btn btn-success btn-lg outlineverde"%>
</div>
</div>

