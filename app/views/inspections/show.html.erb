  
<div class="row text-left texto-verde texto-margin-top">
  <div class="col-sm-9 text-left">
<a-verde > <%= render_breadcrumbs :separator => ' / ',:class => 'a-verde texto-verde' %></a-verde >
 </div>
 <div class="col-sm-3 text-right">
  <%= link_to t('.nueva_busqueda'), city_inspections_path, class: 'btn btn-success btn-lg outlineverde text-right' %>
</div>
</div>
<br/>
