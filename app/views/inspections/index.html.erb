<div class="row text-center">
    <div class="col-lg-10 col-lg-offset-1">
        <%= content_tag :h1, t('.title'), class: 'text-center' %>
        <!-- <hr class="small"> -->
    </div>
</div>

<%= render "shared/search", custom_path: municipio_inspections_path(@municipio), search_placeholder: t('.search_inspections') %>

<div class="deck">
  <% if @inspections.any? %>
    <div class="table__card">
      <ul>
        <% @inspections.each do |inspection| %>
          <%= link_to municipio_inspection_path(@municipio, inspection) do %>
          <li class="table--row">
            <div class="row--title"><%= inspection.name %></div>
            <div class="row--subtitle"><%= inspection.subject %></div>
            <div class="row--footer">Duraci&oacute;n: <%= inspection.period %></div>
          </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  <% else %>
    <%= render "shared/empty_resource", message: t('.no_inspections_available') %>
  <% end %>
</div>
