<h1 class="title">Inspections</h1>

<div class="deck">
  <div class="actions__card">
    <div class="action--title"></div>
    <div class="action--list">
      <%= link_to 'New Inspection', new_inspection_path, class: 'btn btn-default pull-right' %>
    </div>
  </div>

  <% if @inspections.any? %>
    <div class="table__card">
      <ul>
        <% @inspections.each do |inspection| %>
        <li class="table--row">
          <div class="row--title"><%= inspection.nombre %></div>
          <div class="row--subtitle"><%= inspection.materia %></div>
          <div class="row--footer">Duraci&oacute;n: <%= inspection.duracion %></div>
        </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class="alert alert-info">
      <%= t('.no-inspections') %>
    </div>
  <% end %>
</div>
