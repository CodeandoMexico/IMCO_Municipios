<div class="row text-center ">
  <div class="col-md-6 col-md-offset-3">
    <%flash.each do |key, value| %>
    <div class="alert alert-success"><%=value%></div>
    <% end %>
  </div>
</div>
<%= link_to t('.complaint'), new_city_complaint_path(@city), class: 'btn btn-lg btn-red-outline' %>
<div class="row text-center">
  <div class="col-lg-10 col-lg-offset-1">
    <%= content_tag :h1,t('.title'), class: 'text-center texto-verde ' %>
    <hr class="small">
    <br>
  </div>
</div>

<%= form_for :get, :html => {:method => :get}, :url => { :controller => :inspections, :action => :index }  do |f| %>
<div class="col-md-6 col-md-offset-3 text-center">
  <div class="row text-left">
    <div class="row">
      <div class="col-xs-6 col-sm-3">
        Giro del negocio:
      </div>
      <div class="clearfix visible-xs-block"></div>
      <div class="col-md-offset-3">
        <%= f.select :lines, Line.where(city_id: @city).map { |u| [u.name, u.id] },{ include_blank: true ,:selected =>@line  },{ class: 'chosen-select' }%></p>
      </div>
    </div>
    <br>
    <div class="row text-left">
      <div class="col-xs-6 col-sm-3"></div>
      <div class="clearfix visible-xs-block"></div>
      <div class="actions col-md-offset-3">
       <%= f.submit t('buttons.ok'),:class => 'btn btn-success btn-lg outlineverde' %>
       <br>
       <br>
       </div>
     </div>
   </div>
 </div>
 <% unless @inspections.nil? || @inspections.empty?%>
 <% @inspections.each do |inspection| %>
 <%if @inspection_line.where(inspection_id: inspection.id).present?%>
 <%if @first_time%>
 <div class "texto-padding-top">
  <%= render "shared/search", custom_path: city_inspections_path(@city), search_placeholder: t('.search_inspections') %>
</div>
<div class="row text-center">
  <div class="col-lg-12">
   <div class="table__card">
     <div class="deck">
      <div class="table__card">
        <ul>
          <li class="table--row">
            <div class="row--title texto-verde-wrap"><%=t('.nombre')%> </div>
            <div class="row--subtitle texto-verde-wrap"><%=t('.materia')%> </div>
            <div class="row--footer texto-verde-wrap"><%=t('.duracion')%> </div>
          </li>
          <% @first_time = false%>
          <%end%>
          <%= link_to city_inspection_path(@city, inspection) do %>
          <li class="table--row">
            <div class="row--title bg-primary-negro"><%= inspection.name %></div>
            <div class="row--subtitle bg-primary-negro"><%= inspection.matter %></div>
            <div class="row--footer bg-primary-negro"><%= inspection.duration %></div>
          </li>
          <% end %>
          <%end%>
          <% end %>
        </ul>
      </div>
      <% else %>
      <br>
      <br>
      <%= render "shared/empty_resource", message: t('.no_inspections_available') %>
      <% end %>
      <%if @first_time == true %>
      <%= render "shared/empty_resource", message: t('.no_inspections_available') %>
      <%end%>
    </div>
    <%end%>
  </div>
</div>
</div>
