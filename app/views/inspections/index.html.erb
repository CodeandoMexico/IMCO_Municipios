<div class="row text-center ">
  <% flash.each do |key, value| %>
    <div class="alert alert-success"><%=value%></div>
  <% end %>
</div>
<%= link_to t('.complaint'), new_city_complaint_path(@city), class: 'btn btn-red-outline text-right' %>
<%= link_to t('.recordatorios'), city_reminders_path(@city), class: 'btn btn-success btn-md outlineverde text-right' %>
<div class="text-center">
  <%= content_tag :h1,t('.title'), class: 'text-center texto-verde ' %>
  <hr>
</div>

<%= form_for :get, html: { method: :get, class: 'form-horizontal' }, url: { controller: :inspections, action: :index } do |f| %>
  <div class="form-group">
      <label class="col-xs-12 col-sm-2 control-label">Giro del negocio</label>
      <div class="col-xs-12 col-sm-10">
        <%= f.select :lines, Line.where(city_id: @city).map { |u| [u.name, u.id] },{ include_blank: true , selected: @line }, class: 'chosen-select form-control' %>
      </div>
  </div>

  <div class="form-group">
      <label class="col-xs-12 col-sm-2 control-label">Inspecci√≥n</label>
      <div class="col-xs-12 col-sm-10">
        <%= text_field_tag :q, nil, class: 'form-controler', placeholder: t('.search_inspections') %>
      </div>
  </div>

  <div class="form-group">
    <div class="col-xs-12 col-sm-offset-10 col-sm-2">
      <%= f.submit t('buttons.ok'), class: 'btn btn-success btn-block outlineverde' %>
    </div>
  </div>
<% end %>

<% if @inspections.present? %>
  <div class="table__card">
    <div class="deck">
      <div class="table__card">
       <ul>
         <li class="table--row">
           <div class="row--title texto-verde-wrap"><%=t('.nombre')%> </div>
           <div class="row--subtitle texto-verde-wrap"><%=t('.materia')%> </div>
           <div class="row--footer texto-verde-wrap"><%=t('.duracion')%> </div>
         </li>
          <% @inspections.each do |inspection| %>
            <% if inspection.inspection_lines.count > 0 %>
              <%= link_to city_inspection_path(@city, inspection) do %>
                <li class="table--row">
                  <div class="row--title bg-primary-negro"><%= inspection.name %></div>
                  <div class="row--subtitle bg-primary-negro"><%= inspection.matter %></div>
                  <div class="row--footer bg-primary-negro"><%= inspection.duration %></div>
                </li>
              <% end %>
            <% end %>
          <% end %>
        </ul>
<% else %>
  <%= render "shared/empty_resource", message: t('.no_inspections_available') %>
<% end %>
