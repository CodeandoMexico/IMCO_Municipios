<div class="row text-center">
    <div class="col-lg-10 col-lg-offset-1">
        <%= content_tag :h1,t('.title'), class: 'text-center' %>
        <hr class="small">
    </div>
</div>
<%= form_for :get, :html => {:method => :get}, :url => { :controller => :formation_steps, :action => :index }  do |f| %>
	<p>Â¿Iniciaras un nuevo negocio?'
		<%= f.select :lines, Line.where(municipio_id: @municipio).map { |u| [u.nombre, u.id] },{ include_blank: true ,selected: @line }, { class: 'chosen-select' }%>
	</p>
	<div class= "field">
		Mostrar para personas:
		<%=  radio_button_tag :rating, 'AF', @tipo=='AF' %>Fisica
		<%=  radio_button_tag :rating, 'AM', @tipo=='AM'%>Moral
	</div>
	<br>
	<div class="actions">
		<%= f.submit 'Aceptar' %>
	</div>
	<div class="deck">
		<% unless @line.nil? %>
			<!-- <br><br>
			<div class="row">
				<div class="col-lg-12 text-center">
					<h2 class="section-heading"><%=@heading%></h2>
					<h3 class="section-subheading text-muted"> <%=@subheading%> </h3>
					<br><br>
				</div>
			</div> -->
			<div class="row">
				<div class="col-lg-12">
					<ul class="timeline">
						<% count = 0 %>
						<% @formation_steps.each_with_index do |formation_step,index| %>
							<% if formation_step.type == @tipo %>
								<% count += 1 %>
								<%if index.even? %>
									<li/>
								<%else %>
									<li class="timeline-inverted">
								<%end %>
								<div class="timeline-image">
									<%= image_tag "bolita.png", class: "img-circle img-responsive" %>
								</div>
								<div class="timeline-panel">
									<div class="timeline-heading">
										<h4>Paso <%=count%></h4>
										<h4 class="subheading"> <%= formation_step.name %></h4>
									</div>
									<div class="timeline-body">
										<p class="text-muted"><%= formation_step.description %></p>
									</div>
								</div>
							<% end %>
						<% end %>
						<%if(count != 0)%>
							<li class="timeline-inverted">
								<div class="timeline-image">
									<h4>Lo <br>haz<br>logrado</h4>
								</div>
							</li>
						<%else%>
							<%= render "shared/empty_resource", message: t('.no_formation_steps_available') %>
						<%end%>
						
					</ul>
				</div>
			</div>
			<% else %>
			<%= render "shared/empty_resource", message: t('.no_formation_steps_selected') %>
			<% end %>
			
<%end%>