<a-verde > <%= render_breadcrumbs :separator => ' / ',:class => 'a-verde texto-verde' %></a-verde >

<div class="row text-center">
	<div class="col-lg-10 col-lg-offset-1">
		<%= content_tag :h1,t('.title'), class: 'text-center texto-verde ' %>
		<hr class="small">
		<br>
	</div>
</div>
<%= form_for :get, :html => {:method => :get}, :url => { :controller => :formation_steps, :action => :index }  do |f| %>
<div class="col-md-12">
	<div class="col-md-6 col-md-offset-3 text-center texto-verde-wrap">
		<div class="row text-left">
			<div class="row">
				<div class="col-xs-6 col-sm-3 texto-margin-top text-right">
					<%=t('.formation_steps_select_name')%>
				</div>
				<div class="clearfix visible-xs-block">
				</div>
				<div class="col-md-offset-3">
					<%= f.select :lines, Line.where(city_id: @city).map { |u| [u.name, u.id] },{ include_blank: true ,selected: @line }, { class: 'chosen-select' }%>
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-xs-6 col-sm-3 texto-margin-top text-right">
					<%= t('.formation_steps_radio_name')%>
				</div>
				<div class="clearfix visible-xs-block">
				</div>
				<div class="col-md-offset-3">
					<div class="btn-group btn-toggle" data-toggle="buttons">
						<%if @tipo == 'AF'%>
						<label class= "btn btn-default active"><%= t('.radio_fisica')%> <%= radio_button_tag :rating, 'AF',true%></label>
						<label class= "btn btn-default"><%= t('.radio_moral')%> <%= radio_button_tag :rating, 'AM'%></label>
						<%else%>
						<label class= "btn btn-default "><%= t('.radio_fisica')%> <%= radio_button_tag :rating, 'AF'%></label>
						<label class= "btn btn-default active"><%= t('.radio_moral')%> <%= radio_button_tag :rating, 'AM',true%></label>
						<%end%>
					</div>
				</div>
			</div>
			<br>
			<div class="row text-lef">
				<div class="actions col-md-offset-3 text-lef">
					<div class="col-md-6 margin-bottom-button"><%= f.submit t('buttons.federal'),:class => 'btn btn-success btn-lg outlineverde btn-block'%></div>
					<div class="col-md-6"><%= f.submit t('buttons.municipal'),:class => 'btn btn-success btn-lg outlineverde btn-block'%></div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="col-lg-12">
	<% unless @line.nil? %>
	<%if !@formation_steps.nil?%>
	<%= render "shared/carrusel_custome" %>
	<%elsif !@procedure_lines.nil?%>
	<% @procedure_lines.each_with_index do |procedure_line, index|%>
	<%if Procedure.find(procedure_line.procedure_id).category == 'Constituye tu empresa'%>
	<%@procedure_requirement = @procedure_requirements.where(procedure_id: Procedure.find(procedure_line.procedure_id).id)%>
	<div class="row text-center">
		<div class="col-lg-12">
			<div id="main" class="container clear-top">
				<div class="row ">
					<div class="span12">
						<section id="services ">
							<div class="bs-example">
								<p class="text-center texto-verde" >
									<hr class="small">
									<%=Procedure.find(procedure_line.procedure_id).name%>
								</p>
							</div>

						</section>
					</div>
				</div>
			</div>
			<%@llave = index%>
			<%= render "shared/carrusel_procedure_line" %>
		</div>
	</div>
	<%end%>
	<%end%>
	<%else%>
	<br>
	<br>
	<%= render "shared/empty_resource", message: t('.no_formation_steps_selected') %>
	<%end%>
	<% else %>
	<br>
	<br>
	<%= render "shared/empty_resource", message: t('.no_formation_steps_selected') %>
	<% end %>
</div>
<% end %>
