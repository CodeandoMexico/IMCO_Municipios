<p>
	<%= f.label 'Giro que quieres tener' %>
<%= collection_select(:lines, :line_id, Line.where(municipio_id: $id_del_municipio), :id, :nombre, {:prompt => false}) %>
</p>
<p>
	<aside class="call-to-action bg-primary">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 text-center">
					<%= f.submit 'Continuar', :class => 'btn btn-lg btn-light' %>
				</div>
			</div>
		</div>
	</aside>

</p>
<% end %>