<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#sectionA">Inspections</a></li>
    <li><a data-toggle="tab" href="#sectionB">Inspector</a></li>

</ul>
<div class="tab-content">
    <div id="sectionA" class="tab-pane fade in active">
        <div class="deck">
          <div class="actions__card">
            <div class="action--title"><h3 class="title"></h3></div>
            <div class="action--list">
              <%#= link_to 'New Inspection', new_inspection_path, class: 'btn btn-default action-element' %>
          </div>
      </div>

      <% if @inspections.any? %>
      <div class="table__card">
          <ul>
            <% @inspections.each do |inspection| %>
            <%= link_to inspection_path(inspection) do %>
            <li class="table--row">
                <div class="row--title"><%= inspection.nombre %></div>
                <div class="row--subtitle"><%= inspection.materia %></div>
                <div class="row--footer">Duraci&oacute;n: <%= inspection.duracion %></div>
            </li>
            <% end %>
            <% end %>
        </ul>
    </div>
    <% else %>
    <div class="alert alert-info">
      <%= t('.no-inspections') %>
  </div>
  <% end %>
</div>

</div>
<div id="sectionB" class="tab-pane fade">
    <h3 class="title"></h3>
    <div class="row">
      <div class="col-sm-12">
        <%= form_tag inspectors_path, method: :get do %>
        <div class="row">
            <div class="col-sm-10">
              <div class="form-group">
                <div class="input-group">
                  <%= label_tag :q, "Search for:", class: 'sr-only' %>
                  <div class="input-group-addon"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></div>
                  <%= text_field_tag :q, nil, class: 'form-control', placeholder: 'Buscar inspectores...' %>
              </div>
          </div>
      </div>
      <div class="col-sm-2">
          <%= submit_tag "Buscar", class: 'btn btn-block btn-default' %>
      </div>
  </div>
  <% end %>
</div>
<% @inspectors.each do |inspector| %>
<%= link_to inspector_path(inspector) do %>
<div class="col-sm-6 col-md-3">
  <div class="thumbnail">
    <%= image_tag "missing-image.gif" %>
    <div class="caption">
      <h4 class="title"></h4>
  </div>
</div>
</div>
<% end %>
<% end %>
</div>

</div>
</div>