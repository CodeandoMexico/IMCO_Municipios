<%= form_for :get, :html => {:method => :get}, :url => { :controller => :procedure_lines, :action => :index }  do |f| %>
<p>
  ¿Cual es el giro de tu negocio.....?
  	<%= f.select :lines, Line.where(municipio_id: @municipio).map { |u| [u.nombre, u.id] },{ include_blank: true ,:selected =>@line  }, 
  	{ class: 'chosen-select' }%>

  <div class= "field">
    <%tipos = {'Físico' => 'TF', 'Moral' => 'TM', 'Ambos' => 'A'}%>
      Mostrar para personas:
      <%=  radio_button_tag :rating, 'TF', @tipo=='TF' %>Fisica
      <%=  radio_button_tag :rating, 'TM', @tipo=='TM'%>Moral
      <%=  radio_button_tag :rating, 'A', @tipo=='A' %>Ambas
  </div>

  <div class="deck">
    <% unless @tramites_del_giro.nil? %>
    <div class="table__card">
      <ul>
        <% @tramites_del_giro.each_with_index do |tramite_de_giro, i| %>
        <%= link_to municipio_procedure_line_path(@municipio,tramite_de_giro) do %>
        <li class="table--row">
          <%if tramite_de_giro.tipo == @tipo %>
            <div class="row--"><%= tramite_de_giro.nombre %></div>
          <%end%>
          <%if @tipo == 'A' %>
            <div class="row--"><%= tramite_de_giro.nombre %></div>
          <%end%>
        </li>
        <% end %>
        <% end %>
      </ul>
    </div>
    <% else %>
    <div class="alert alert-info">
      <%= t('.ningun-tramites') %>
    </div>
    <% end %>
    <div class="actions">
      <%= f.submit 'Aceptar' %>
    </div>
    <%end%>
  </div>
<script>
$(document).ready(function(){ 
    $('.chosen-select').chosen({
       allow_single_deselect: true,
       no_results_text: 'No hay resultados',
       placeholder_text: 'Selecciona una opción',
       width: '500px'
    });
})	
</script>
