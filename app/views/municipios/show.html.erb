                <div class="dropdown">
                <button class="btn btn-success btn-lg outlineverde" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                Consultar
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                    <li role="presentation"><%= link_to t('.inspeccion'), municipio_inspections_path(@municipio) %></li>
                    <hr class="divider">
                    <li role="presentation"><%= link_to t('.inspector'), municipio_inspectors_path(@municipio) %></li>
                </ul>
            </div>
         </div>
    </div>
