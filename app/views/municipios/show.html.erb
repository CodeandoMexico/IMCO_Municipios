<section id="services" class="services bg-primary-verde">
    <div class="col-md-8 col-md-offset-2 text-center">
        <div class="col-md-3">
            <div class="service-item">
              <h4> <%=t('.nuevo')%> </br></br></br>
                <%= image_tag "abrir.png", class: "img-responsive center-block" %>
                </h4>
                <p class="bg-primary-nergro"><%=t('.texto_nuevo')%> </p></br>
                <%= link_to "Continuar",municipio_formation_steps_path(@municipio), :class => 'btn btn-success btn-lg outlineverde'%>
            </div>
         </div>
        <div class="col-md-3">
            <div class="service-item">
              <h4><%=t('.tramite')%> </br></br></br>
                <%= image_tag "tramites.png", class: "img-responsive center-block" %>
                </h4>
                <p class="bg-primary-nergro"><%=t('.texto_tramite')%> </p></br>
                <%= link_to "Consultar",municipio_procedure_lines_path(@municipio), :class => 'btn btn-success btn-lg outlineverde'%>
