<div id="wrap">
  <div id="main" class="container clear-top">
    <div class="row row-padding-bottom">
      <div class="span12">
        <section id="services ">
          <div class="center-block-margin">
            <div class="container">
              <div id="form-container">
                <%= form_for  @reminder, url: city_reminders_path do |f| %>
                <div class="form-group row">
                  <%= f.label t('.name'), class: 'col-sm-2 control-label' %>
                  <div class="col-sm-10">
                    <%= f.text_field :name, class: 'form-control' %>
                  </div>
                </div>
              <div class="form-group row">
                <%= f.label t('.license'), class: 'col-sm-2 control-label' %>
                <div class="col-sm-10">
                  <%= f.text_field :license, class: 'form-control' %>
                </div>
              </div>

            <div class="form-group row ">
              <%= f.label t('.until'), class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= f.text_field :until, class: 'form-control' %>
              </div>
            </div>


          <div class="actions">
            <%= f.submit t('reminders.new.create_reminder'), :class => 'btn btn-success btn-xs outlineverde' %>
          </div>
          <% end %>
        </div>

      </div>
    </div>
  </section>
</div>
</div>
</div>
</div>

 <script>
  $(function() {
    $( "#reminders_until" ).datepicker({
       format: "dd/mm/yyyy"
    });
  });
  </script>
