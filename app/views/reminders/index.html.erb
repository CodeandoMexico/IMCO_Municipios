<div id="wrap">
  <div id="main" class="container clear-top">
    <div class="row row-padding-bottom">
      <div class="span12">
        <section id="services ">
          <div class="center-block-margin">
            <div class="container">
              <div class="row text-center ">
                <div class="col-md-6 col-md-offset-3">
                  <%flash.each do |key, value| %>
                  <div class="alert alert-success"><%=value%></div>
                  <% end %>
                </div>
              </div>
              <h2> <%= t('titles.reminder') %></h2>


              <div class="row text-right">
                <%#= link_to t('.new_reminder'), new_city_reminder_path, :class => 'btn btn-success btn-xs outlineverde' %>
              </div>
              <table class="table">
               <thead>
                 <th>#</th>
                 <th><%= t('.name') %></th>
                 <th><%= t('.license') %></th>
                 <th><%= t('.until') %></th>
                 <th class="text-right"><%= t('.acciones') %></th>
               </thead>
               <tbody>
                 <% @reminders.each_with_index do |reminder, idx| %>
                 <%= content_tag :tr do %>
                 <%= content_tag :td, idx + 1 %>
                 <%= content_tag :td, reminder.name %>
                 <%= content_tag :td, reminder.license %>
                 <%= content_tag :td, reminder.until_to %>
                 <%= content_tag :td, :class => 'text-right' do %>
                 <%= link_to t('.edit'), edit_city_reminder_path(@city,reminder) , :class => 'btn btn-success btn-xs outlineverde text-right'%> 
                 <%= link_to t('.borrar'), city_reminder_path(@city, reminder.id), method: :delete, data: { confirm: t('form.confirmations.delete_reminder') }, :class => 'btn btn-success btn-xs outlineverde text-right' %>

                 <% end %>
                 <% end %>
                 <% end %>
               </tbody>
             </table>
              <%if @reminders.count > 0%>
                  <hr class="small">
              <%end%>
              
             <%= form_for  @reminder, url: city_reminders_path do |f| %>
             <div class="form-group row">
              <div class="col-sm-3">
                <%= f.text_field :name, class: 'form-control', placeholder: 'Nombre del documento...' %>
              </div>
              <div class="col-sm-3">
                <%= f.text_field :license, class: 'form-control', placeholder: 'Número o fólio del documento...' %>
              </div>
              <div class="col-sm-3">
                <%= f.text_field :until_to, class: 'form-control' , placeholder: 'Fecha de vencimiento...'%>
              </div>
              <div class="col-sm-3 text-right">
                <%= f.submit t('reminders.index.create_reminder'), :class => 'btn btn-success btn-xs outlineverde' %>
              </div>
            </div>

            <% end %>

              <%if @reminders.count <= 0%>
                   <%= render "shared/empty_resource", message: t('.no_reminders_available'), message2: t('.no_reminders_available_examples') %>
              <%end%>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>
</div>


<script>
$(function() {
  $( "#reminders_until_to" ).datepicker({
       format: 'yyyy-dd-mm',
        startDate: '-3d'
 });

});
</script>