<%= form_for :post, :url => { :controller => :municipios, :action => :search } do |f| %>

	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<div class="input-group">
					<div class="input-group-addon">
						<H3><%=f.label 'Ingresa tu municipio' %></H3>
						<BR>
						<%= f.select :municipio, Municipio.all.map { |u| [u.nombre, u.id] },{ include_blank: true }, { class: 'chosen-select' }%>
						</br>
					</div>
				</div>
				<br>
				<%= f.submit 'Continuar', :class => 'btn btn-lg btn-light' %>
			</div>
		</div>
	</div>
<% end %>

<p>
  Download:
  <%= link_to "CSV", imcos_path(format: "csv") %> |
  <%= link_to "Excel", imcos_path(format: "xls") %>
</p>


<%= link_to "Facebook", "/auth/facebook", class: "fb-login-button"%>  

<%= link_to "Linkdin", "https://www.linkedin.com/uas/oauth2/authorization?response_type=code&client_id=787qz1t8qct0ym&scope=r_basicprofile%20r_emailaddress&state=STATE&redirect_uri=http://localhost:3000/auth/linkedin/callback" %>  
<div id="fb-root"></div>


<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/es_LA/sdk.js#xfbml=1&appId=1499379517003281&version=v2.0";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div id="buttonControl">
  <input type="button" id="showLinkedIn" value="Show LinkedIn" onclick="showLinkedIn();" />
</div>
<div id="buttonContent" style="display: none;"></div>

<script type="text/javascript">
function showLinkedIn() {
  // insert the SignIn plugin
  $('#buttonContent').html('<script type="IN/Login" data-onauth="loadData"><\/script>');

  // tell the LinkedIn JavaScript code to re-parse the element containing the SignIn plugin
  IN.parse($('#buttonContent')[0]);

  // hide button trigger, if needed
  $('#buttonControl').hide();

  // show the LinkedIn control
  $('#buttonContent').show();
}
</script>