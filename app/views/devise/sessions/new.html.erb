
<h1 class="title text-center"><%= t('.title') %></h1>
<div id="authentication">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <div class="field">
        <%#= f.label :email, t('.email') %>
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('.email') %>
      </div>

      <div class="field">
        <%#= f.label :password, t('.password') %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('.password') %>
      </div>
    </div>

    <!-- <%# if devise_mapping.rememberable? -%>
      <div class="field">
        <%#= f.check_box :remember_me %>
        <%#= f.label :remember_me %>
      </div>
    <%# end -%> -->

    <div class="actions">
      <%= f.submit t('.log_in'), class: 'btn btn-block btn-default' %>
    </div>
  <% end %>
</div>

<%#= render "devise/shared/links" %>
