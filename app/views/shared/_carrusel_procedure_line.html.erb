
  <div id="main" class="container clear-top">
    <div class="row ">
      <div class="span12">
        <section id="services ">
<div class="bs-example">
    <div id=<%="myCarousel#{@llave}"%> class="carousel slide" data-interval="false" data-ride="carousel">
      <!-- Carousel indicators -->
              <!-- Carousel indicators -->
              <%= render "shared/cargar_bolitas_formation_step" %>
              <!-- Carousel items -->
              <div class="carousel-inner">
                <% count = 0 %>
                <% @procedure_requirement.each_with_index do |procedure,index| %>
                <% @requirements.where(id: procedure.requirement_id).each do |tramite| %>
                <% count += 1 %>
                <%if count == 1 %>
                <div class="active item">
                  <%else %>
                  <div class="item">
                    <%end %>
                    <div class="carousel-content">
                      <div class ="texto-padding-center">
                        <h4 class="texto-verde-wrap top-carrusel"><%=tramite.nombre%></h4>
                        <p class="texto-negro"><%=tramite.descripcion[0..350] %>
                          <br>
                          <%=link_to t('.obtener_aqui'), tramite.path , {:style => 'color: #418F61', :target => '_blank'} %></p>
                        </div>
                      </div>
                    </div>
                    <%end%>
                    <%end%>
                  </div>
                  <!-- Carousel nav -->
                  <a-verde class="carousel-control left" href=<%="#myCarousel#{@llave}"%> data-slide="prev">
                  <span class="glyphicon glyphicon-chevron-left" ></span>
                </a-verde>
                <a-verde class="carousel-control right" href=<%="#myCarousel#{@llave}"%> data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
              </a-verde>
            </div>
          </div>
        </section>
    </div>
  </div>
</div>






<script type="text/javascript">
$(document).ready(function(){
  $(".tip-top").tooltip({placement : 'top'});
  $(".tip-right").tooltip({placement : 'right'});
  $(".tip-bottom").tooltip({placement : 'bottom'});
  $(".tip-left").tooltip({ placement : 'left'});
});
</script>

<script type="text/javascript">
$(document).ready(function(){
  $('[data-toggle="tooltip"]').tooltip();   
});
</script>