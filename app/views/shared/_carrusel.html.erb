<section id="carousel" class="bg-primary-negro">           
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="carousel slide" id="fade-quote-carousel" data-ride="carousel" data-interval="false">
          <!-- Carousel indicators -->
          <ol class="verde carousel-indicators">
            <% count = 0 %>
            <% @formation_steps.each_with_index do |formation_step,index| %>
              <% if formation_step.type == @tipo %>
                <% count += 1 %>
                <%if @tramites_realizados.nil?%>
                  <li data-target="#fade-quote-carousel" data-slide-to=<%=count-1%> class="actives" data-toggle="tooltip" data-placement="bottom" data-original-title='<%=formation_step.name%>'></li>
                <%else%>
                  <%if @tramites_realizados.where(formation_step_id: formation_step,line_id: @line, tipo: @tipo).first.nil?%>
                    <li data-target="#fade-quote-carousel" data-slide-to=<%=count-1 %> data-toggle="tooltip" data-placement="bottom" data-original-title='<%=formation_step.name%>'></li>
                  <%else%>
                    <li data-target="#fade-quote-carousel" data-slide-to=<%=count-1%> class="actives" data-toggle="tooltip" data-placement="bottom" data-original-title='<%=formation_step.name%>'></li>
                  <%end%>
                <%end%>
              <%end%>
            <%end%>
          </ol>
          <!-- Carousel items -->
          <div class="carousel-inner">
            <% count = 0 %>
            <% @formation_steps.each_with_index do |formation,index| %>
              <% if formation.type == @tipo %>
                <% count += 1 %>
                <%if count == 1 %>
                  <div class="active item">
                <%else %>
                  <div class="item">
                <%end %>
                    <blockquote>
                      <H1><%=formation.name%></H1>
                      <p style="font-size:15px" class="bg-primary-nergro "><%=formation.description %></p>

                      <%=link_to t('.obtener_aqui'), formation.path , {:style => 'color: #418F61'}%>
                      <%unless @tramites_realizados.nil?%>
                        <%if request.original_url.include? "guardado" %>
                          <%@tamano = "&guardado=#{formation.id}".mb_chars.length%>
                          <%@ruta = "#{request.original_url[0..-@tamano-1]}&guardado=#{formation.id}" %>
                        <%else%>
                          <%@ruta = "#{request.original_url}&guardado=#{formation.id}" %>
                        <%end%>
                        <%if @tramites_realizados.where(formation_step_id: formation.id, line_id: @line, tipo: @tipo).first.nil?%>
                          <div class="col-md-4"><p class="text-right"> <%=link_to 'Ya tengo este tramite', @ruta,{:style => 'color: #f00'}  %> </p></div>
                        <%else%>
                          <div class="col-md-4"><p class="text-right">Terminado</p></div>
                        <%end%>
                      <%end%>
                      </blockquote>
                  </div>
              <% end %>
            <% end %>
            <%if(count == 0)%>
              <%= render "shared/empty_resource", message: t('.no_formation_steps_available') %>
            <%end%>
          </div>
        </div>             
      </div>
    </div>
  </div>
</section>

<script type="text/javascript">
$(document).ready(function(){
    $(".tip-top").tooltip({placement : 'top'});
    $(".tip-right").tooltip({placement : 'right'});
    $(".tip-bottom").tooltip({placement : 'bottom'});
    $(".tip-left").tooltip({ placement : 'left'});
});
</script>

<script type="text/javascript">
$(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip();   
});
</script>
              