<div class="bs-example">
    <div id="myCarousel" class="carousel slide" data-interval="false" data-ride="carousel">
      <!-- Carousel indicators -->
      <ol class="carousel-indicators">
            <% count = 0 %>
            <% @formation_steps.each_with_index do |formation_step,index| %>
              <% if formation_step.type == @tipo %>
                <% count += 1 %>
                <%if @tramites_realizados.nil?%>
                    <%if count==1%>
                        <li data-target="#myCarousel" data-slide-to=<%=count-1%> class="active" data-toggle="tooltip" data-placement="bottom" data-original-title='<%=formation_step.name%>'></li>
                    <%else%>
                        <li data-target="#myCarousel" data-slide-to=<%=count-1%> data-toggle="tooltip" data-placement="bottom" data-original-title='<%=formation_step.name%>'></li>
                    <%end%>
                <%else%>
                  <%if @tramites_realizados.where(formation_step_id: formation_step,line_id: @line, tipo: @tipo).first.nil?%>
                    <li data-target="#myCarousel" data-slide-to=<%=count-1%> data-toggle="tooltip" data-placement="bottom" data-original-title='<%=formation_step.name%>' ></li>
                  <%else%>
                    <li data-target="#myCarousel" data-slide-to=<%=count-1%> class="active" data-toggle="tooltip" data-placement="bottom" data-original-title='<%=formation_step.name%>' class="actives"></li>
                  <%end%>
                <%end%>
              <%end%>
            <%end%>
          </ol>
       <!-- Carousel items -->
        <div class="carousel-inner">
            <% count = 0 %>
            <% @formation_steps.each_with_index do |formation,index| %>
              <% if formation.type == @tipo %>
                <% count += 1 %>
                <%if count == 1 %>
                  <div class="active item">
                <%else %>
                  <div class="item">
                <%end %>
                <div class="carousel-caption text-top">
                  <h4 class="texto-verde-wrap top-carrusel"><%=formation.name%></h4>
                  <p class="texto-negro texto-padding-bottom"><%=formation.description[0..350] %><br>
                  <%=link_to t('.obtener_aqui'), formation.path , {:style => 'color: #418F61', :target => '_blank'} %></p>
                </div>
              </div>
            <%end%>
          <%end%>  
            
        </div>
        <!-- Carousel nav -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" ></span>
        </a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
</div>






<script type="text/javascript">
$(document).ready(function(){
    $(".tip-top").tooltip({placement : 'top'});
    $(".tip-right").tooltip({placement : 'right'});
    $(".tip-bottom").tooltip({placement : 'bottom'});
    $(".tip-left").tooltip({ placement : 'left'});
});
</script>

<script type="text/javascript">
$(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip();   
});
</script>