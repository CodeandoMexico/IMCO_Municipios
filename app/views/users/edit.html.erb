<h1 class="title text-center">Editar perfil</h1>
<div id="authentication">
  <%= form_for(@user) do |f| %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :address %><br />
      <%= f.text_area :address, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :operation_license %><br />
      <%= f.file_field :operation_license %>
    </div>

    <div class="form-group">
      <%= f.label :operation_license_file %><br />
      <%= f.file_field :operation_license_file %>
    </div>

    <div class="form-group">
      <%= f.label :land_permission_file %><br />
      <%= f.file_field :land_permission_file %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: 'btn btn-primary pull-right' %>
    </div>
  <% end %>
</div>
