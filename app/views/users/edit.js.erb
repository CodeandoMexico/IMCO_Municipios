$(".line_for_city").removeClass("hide");
$('#user_line_id').empty();
$('#user_line_id').trigger("chosen:updated");
<%Line.order(:name).where(city_id: @city_select).select(:name, :id).each_with_index do |value, index|%>
  <%@array_line[index] = value.name.to_s%>
  <%@array_id[index] = value.id.to_s;%>
<%end%>
var array_line = <%= raw @array_line%>
var array_id = <%= raw @array_id%>
var sel = document.getElementById('user_line_id');
for(var i = 0; i < array_line.length; i++) {
  var opt = document.createElement('option');
  opt.innerHTML = array_line[i];
  opt.value = i+1;
  opt.id = array_id[i];
  opt.data = array_line[i]
  sel.appendChild(opt);
}
$('#user_line_id').trigger("chosen:updated");
