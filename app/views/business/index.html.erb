<%= form_for :post, :url => { :controller => :business, :action => :steps } do |f| %>
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<div class="input-group">
					<div class="input-group-addon">
						<H3><%=f.label '¿Iniciaras un nuevo negocio?' %></H3>
						<BR>
						<%= f.select :lines, Line.where(municipio_id: @municipio).map { |u| [u.nombre, u.id] },{ include_blank: true }, { class: 'chosen-select' }%>
						</br>
							<H3><%=f.label '¿Qué tipo de persona eres?' %></H3>
						<br>
						<div class= "field">
					    <%tipos = {'Físico' => 'TF', 'Moral' => 'TM'}%>
					      <%=  radio_button_tag :rating, 'AF', @tipo=='AF' %>Fisica
					      <%=  radio_button_tag :rating, 'AM', @tipo=='AM'%>Moral
					  	</div>
			  			<br>
			  				<br>
				            <%= f.submit 'Aceptar', :class => 'btn btn-lg btn-light' %>
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>


